{
  "dataset_reader": {
    "type": "document",
    "tokenizer": {
      "type": "word",
      "word_splitter": {
        "type": "spacy",
        "pos_tags": true
      }
    },    "mask": ["ADJ", "ADV", "NOUN", "PROPN", "VERB"],
    "drop_masked": true
  },
  "train_data_path": ["data/train/onion_drugs_legal.txt", "data/train/onion_drugs_illegal.txt"],
  "validation_data_path": ["data/validation/onion_drugs_legal.txt"], "data/validation/onion_drugs_illegal.txt"],
  "test_data_path": ["data/test/onion_drugs_legal.txt", "data/test/onion_drugs_illegal.txt"],
  "evaluate_on_test": true,
  "model": {
    "type": "seq2vec_classifier",
    "model_text_field_embedder": {
      "tokens": {
        "type": "embedding",
        "pretrained_file": "https://s3-us-west-2.amazonaws.com/allennlp/datasets/glove/glove.6B.100d.txt.gz",
        "embedding_dim": 100,
        "trainable": false
      }
    },
    "internal_text_encoder": {
      "type": "lstm",
      "bidirectional": true,
      "input_size": 100,
      "hidden_size": 100,
      "num_layers": 1,
      "dropout": 0.2
    },
    "output_layer": {
      "input_dim": 200,
      "num_layers": 2,
      "hidden_dims": [200, 3],
      "activations": ["relu", "linear"],
      "dropout": [0.2, 0.0]
    }
  },
  "iterator": {
    "type": "bucket",
    "sorting_keys": [["text", "num_tokens"]],
    "batch_size": 32
  },
  "trainer": {
    "num_epochs": 30,
    "patience": 3,
    "cuda_device": -1,
    "grad_clipping": 5.0,
    "validation_metric": "+accuracy",
    "optimizer": {
      "type": "adam",
      "lr": 0.001
    }
  }
}
