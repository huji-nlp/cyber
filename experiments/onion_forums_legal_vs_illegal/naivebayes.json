{
  "dataset_reader": {
    "type": "document"
  },
  "train_data_path": ["data/train/onion_forums_legal.txt", "data/train/onion_drugs_legal.txt"],
  "validation_data_path": ["data/validation/onion_forums_legal.txt", "data/validation/onion_drugs_legal.txt"],
  "test_data_path": ["data/test/onion_forums_legal.txt", "data/test/onion_drugs_legal.txt"],
  "evaluate_on_test": true,
  "model": {
    "type": "naive_bayes"
  },
  "iterator": {
    "type": "bucket",
    "sorting_keys": [["text", "num_tokens"]],
    "batch_size": 32
  },
  "trainer": {
    "num_epochs": 30,
    "patience": 3,
    "cuda_device": -1,
    "validation_metric": "+accuracy",
    "optimizer": {
      "type": "sgd",
      "lr": 0.001,
    }
  }
}
